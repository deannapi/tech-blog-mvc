<article class="post">
  <div class="title">
    <a href="{{post_url}}" target="_blank">{{title}}</a>
    Posted By: {{user.username}} on {{format_date created_at}}
  </div>
  <div class="meta">
    <span>{{post_url}}</span>
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>